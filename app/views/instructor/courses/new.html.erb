<br />
<div class="booyah-box col-10 offset-1">
  <h1>
    Add a new course
  </h1>
  <%= simple_form_for @course, url: instructor_courses_path do |f| %>
    <%= f.input :title, error: 'Title must be specified' %>
    <%= f.input :description, error: 'Description must be set' %>
    <%= f.input :cost, error: 'Cost must contain a number' %>
    <%= f.input :image %>
    <br />
    <%= f.submit "Create", class: 'btn btn-primary' %>
    <br />
  <% end %>
  <br />
</div>